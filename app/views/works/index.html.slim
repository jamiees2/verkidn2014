.row
  .col-xs-12
    h1
      | TO WORKS
    table.table.table-striped
      thead
        tr
          th
            | Name
          th
            | Description
          th
            | Status
          th
            | Work Parts
          th
          th
          th
      tbody
        - @works.each do |work|
          tr
            td
              = work.name
            td
              = work.description
            td
              = work.status.name
            td
              = link_to 'Work Parts', work_work_parts_path(work)
            td
              = link_to 'Show', work
            td
              -if can? :update, Work
                = link_to 'Edit', edit_work_path(work)
            td
              -if can? :destroy, Work
                = link_to 'Destroy', work, method: :delete, data: { confirm: 'Are you sure?' }
    br
    - if can? :create, Work
      = link_to 'New Work', new_work_path, :class => 'btn btn-primary'
