.row
  .col-xs-12
    h1
      | Work Logged
    table.table.table-striped
      thead
        tr
          th
            | Hours
          th
            | Description
          th
            | Logged
          th
          th
      tbody
        - @work_logs.each do |work_log|
          tr
            td
              = work_log.hours
            td
              = work_log.description
            td
              = work_log.created_at
            td
              -if can? :update, work_log
                = link_to 'Edit', edit_assignment_worklog_path(@assignment, work_log)
            td
              -if can? :destroy, work_log
                = link_to 'Destroy', assignment_worklog_path(@assignment, work_log), method: :delete, data: { confirm: 'Are you sure?' }

    p
      | Number of hours:
      = @num_hours
    br
    - if can? :create, WorkLog
      = link_to 'Log Work', new_assignment_worklog_path(@assignment), :class => 'btn btn-primary'
